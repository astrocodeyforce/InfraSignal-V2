# Nginx development config for InfraSignal
# Serves static assets (CSS/JS/images/fonts) directly with gzip compression.
# Proxies all dynamic requests to the Starman app server.

server {
    listen 80 default_server;
    root /var/www/fixmystreet/web;

    # ---- Gzip compression ----
    gzip on;
    gzip_disable "msie6";
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 4;
    gzip_min_length 256;
    gzip_types
        application/javascript
        application/x-javascript
        application/json
        application/xml
        text/css
        text/plain
        text/xml
        text/javascript
        image/svg+xml;

    client_max_body_size 10m;

    # ---- Static assets served by Nginx (bypass Starman) ----
    location ~* \.(css|js)$ {
        expires 1h;
        add_header Cache-Control "public";
        add_header X-Content-Type-Options nosniff;
        access_log off;
        try_files $uri @app;
    }

    location ~* \.(jpg|jpeg|png|gif|ico|svg|webp|woff|woff2|ttf|eot)$ {
        expires 1h;
        add_header Cache-Control "public";
        access_log off;
        try_files $uri @app;
    }

    # ---- Rewrite rules ----
    rewrite ^/rss/council/([0-9]+)$  /rss/reports/$1 permanent;
    rewrite ^/report$                /reports        permanent;
    rewrite '^/{/rss/(.*)}$'         /rss/$1         permanent;
    rewrite '^/reports/{/rss/(.*)}$' /rss/$1         permanent;
    rewrite ^/alerts/?$              /alert          permanent;

    # ---- MapIt proxy ----
    location /mapit {
        proxy_pass https://mapit.mysociety.org/;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # ---- All other requests -> Starman ----
    location / {
        try_files $uri @app;
    }

    location @app {
        limit_req zone=general burst=20 nodelay;
        limit_conn addr 50;

        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;
        proxy_set_header Connection "";
        proxy_http_version 1.1;
        proxy_redirect off;
        proxy_connect_timeout 5s;
        proxy_read_timeout 60s;
        proxy_send_timeout 30s;

        # Language switching: browser must re-validate when cookie changes
        proxy_hide_header Cache-Control;
        add_header Cache-Control "no-cache, must-revalidate" always;
        add_header Vary "Cookie" always;

        # Starman listens on port 3000 inside the fixmystreet container
        proxy_pass http://fixmystreet.svc:3000;
    }
}
